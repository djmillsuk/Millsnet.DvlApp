<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label" x:Key="TitleBarLabelStyle" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="TextColor" Value="{DynamicResource Black}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="IconLabelStyle" BasedOn="{StaticResource BaseLabelStyle}">
        <Setter Property="FontFamily" Value="icofont"/>
    </Style>
    
    <Style TargetType="Button" x:Key="TitleBarButtonStyle">
        <Setter Property="TextColor" Value="{DynamicResource Black}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource White}" />
    </Style>
    
    <Style TargetType="Button" x:Key="TitleBarIconButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}">
        <Setter Property="FontFamily" Value="icofont"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="Margin" Value="0,5,5,5"/>
    </Style>


